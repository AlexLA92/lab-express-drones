<h2>Edit drone</h2>
{{#with drone}}
    <form action="/drones/{{_id}}/edit" method = "POST">
        <label for = "name">Name</label>
        <input id = "name" name = "name" type="text" value = {{name}}>
        <label for = "propellers">Propellers</label>
        <input id = "propellers" name = "propellers" type="number" value = {{propellers}}>
        <label for = "maxSpeed">Max Speed</label>
        <input id = "maxSpeed" name = "maxSpeed" type="number" value = {{maxSpeed}}>
        <input type = "submit" value = "Edit drone">
    </form>
{{/with}}