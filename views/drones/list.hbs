<h2>Available drones</h2>
{{#each drones}}
    <div class = "drone-element">
        <p>{{this.name}} (<a href="/drones/{{this._id}}/edit">Edit</a>)</p>
        <li>Propellers : {{this.propellers}}</li>
        <li>Max Speed : {{this.maxSpeed}}</li>
    </div>
    <form action="/drones/{{this._id}}/delete" method ="post"><input type="submit" value ="Delete drone"></form>
{{/each}}